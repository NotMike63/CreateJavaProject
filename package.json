{
  "name": "itsc2214",
  "displayName": "ITSC 2214",
  "description": "An extension for UNCC ITSC2214",
  "version": "2.0.0",
  "publisher": "MichaelSpitz",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:itsc2214.createJavaProject",
    "onCommand:itsc2214.setupDirectory",
    "onCommand:itsc2214.openDirectory"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/NotMike63/CreateJavaProject"
  },
  "homepage": "https://github.com/NotMike63/CreateJavaProject#readme",
  "bugs": {
    "url": "https://github.com/NotMike63/CreateJavaProject/issues"
  },
  "icon": "icon.png",
  "license": "MIT",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "itsc2214ExplorerView",
          "name": "ITSC2214 Assignments",
          "when": "explorer"
        },
        {
          "id": "itsc2214UploadView",
          "name": "Upload Project",
          "when": "explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "itsc2214.createJavaProject",
        "title": "Create Java Project",
        "category": "ITSC2214"
      },
      {
        "command": "itsc2214.setupDirectory",
        "title": "Setup Project Directory",
        "category": "ITSC2214"
      },
      {
        "command": "itsc2214.openDirectory",
        "title": "Open Project Directory",
        "category": "ITSC2214"
      },
      {
        "command": "itsc2214.reinstallJars",
        "title": "Reinstall Jars",
        "category": "ITSC2214"
      },
      {
        "command": "itsc2214.refreshAssignments",
        "title": "Refresh Assignments",
        "icon": "$(sync)",
        "category": "ITSC2214"
      },
      {
        "command": "itsc2214.downloadAssignment",
        "title": "Download Assignment",
        "icon": "$(cloud-download)"
      },
      {
        "command": "itsc2214.setDownloadUrl",
        "title": "Set Download URL",
        "icon": "$(gear)",
        "category": "ITSC2214"
      },
      {
        "command": "itsc2214.refreshUploads",
        "title": "Refresh Uploads",
        "icon": "$(sync)",
        "category": "ITSC2214"
      },
      {
        "command": "itsc2214.setUploadUrl",
        "title": "Set Upload URL",
        "icon": "$(gear)",
        "category": "ITSC2214"
      },
      {
        "command": "itsc2214.uploadProject",
        "title": "Submit Project to Web-CAT",
        "category": "ITSC2214",
        "icon": "$(cloud-upload)"
      }
    ],
    "configuration": {
      "title": "ITSC2214 Project Settings",
      "properties": {
        "itsc2214.downloadURL": {
          "type": "string",
          "default": "https://webpages.charlotte.edu/mperez19/itsc2214/2025Fall/snarf.xml",
          "description": "The URL to the snarf file listing available assignments."
        },
        "itsc2214.uploadURL": {
          "type": "string",
          "default": "https://web-cat.cs.vt.edu/Web-CAT/WebObjects/Web-CAT.woa/wa/assignments/eclipse?institution=UNCC",
          "description": "The URL for submitting assignments to Web-CAT."
        },
        "itsc2214.submitURLs": {
          "type": "array",
          "default": ["https://web-cat.cs.vt.edu/Web-CAT/WebObjects/Web-CAT.woa/wa/assignments/eclipse?institution=UNCC"],
          "description": "An array of URLs for submitting assignments to Web-CAT."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "itsc2214Explorer",
          "title": "ITSC2214",
          "icon": "icon.png",
          "when": "workspaceExists"
        }
      ]
    },
    "views": {
      "itsc2214Explorer": [
        {
          "id": "itsc2214ExplorerView",
          "name": "Assignments"
        },
        {
          "id": "itsc2214UploadView",
          "name": "Upload Project"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "itsc2214.refreshAssignments",
          "when": "view == itsc2214ExplorerView",
          "group": "navigation"
        },
        {
          "command": "itsc2214.setDownloadUrl",
          "when": "view == itsc2214ExplorerView",
          "group": "navigation"
        },
        {
          "command": "itsc2214.refreshUploads",
          "when": "view == itsc2214UploadView",
          "group": "navigation",
          "icon": "$(sync)"
        },
        {
          "command": "itsc2214.setUploadUrl",
          "when": "view == itsc2214UploadView",
          "group": "navigation",
          "icon": "$(gear)"
        }
      ],
      "view/item/context": [
        {
          "command": "itsc2214.downloadAssignment",
          "when": "view == itsc2214ExplorerView && viewItem == assignment",
          "group": "inline"
        },
        {
          "command": "itsc2214.uploadProject",
          "when": "view == itsc2214UploadView && viewItem == project",
          "group": "inline",
          "icon": "$(cloud-upload)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.12",
    "@types/node-fetch": "^2.6.11",
    "@types/unzip-stream": "^0.3.3",
    "@types/vscode": "^1.85.0",
    "@types/xml2js": "^0.4.14",
    "@types/archiver": "^5.3.1",
    "typescript": "^5.4.5",
    "@types/form-data": "^2.5.0",
    "@types/stream-buffers": "^3.0.7"
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "unzip-stream": "^0.3.1",
    "xml2js": "^0.6.2",
    "archiver": "^5.3.1",
    "fast-xml-parser": "^4.3.6",
    "glob": "^10.3.10",
    "form-data": "^4.0.0",
    "node-html-parser": "^6.1.13",
    "stream-buffers": "^3.0.2"
  }
}
