{
  "name": "itsc2214",
  "displayName": "ITSC 2214",
  "description": "An extension for UNCC ITSC2214",
  "version": "1.0.0",
  "engines": {
    "vscode": "^0.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "itsc2214.createJavaProject",
        "title": "ITSC2214: Create Java Project"
      },
      {
        "command": "itsc2214.downloadAssignment",
        "title": "ITSC2214: Download Assignment"
      },
      {
        "command": "itsc2214.uploadProject",
        "title": "ITSC2214: Upload Project"
      },
      {
        "command": "itsc2214.reinstallJars",
        "title": "ITSC2214: Reinstall JARs"
      },
      {
        "command": "itsc2214.setDownloadUrl",
        "title": "ITSC2214: Set Assignment Download URL"
      },
      {
        "command": "itsc2214.setUploadUrl",
        "title": "ITSC2214: Set Project Upload URL"
      },
      {
        "command": "itsc2214.refreshAssignments",
        "title": "ITSC2214: Refresh Assignments View"
      },
      {
        "command": "itsc2214.openView",
        "title": "ITSC2214: Open Assignments View"
      }
    ],
    "configuration": {
      "title": "ITSC2214 Project Settings",
      "properties": {
        "itsc2214.downloadURL": {
          "type": "string",
          "default": "https://webpages.charlotte.edu/mperez19/itsc2214/2025Spring/snarf.xml",
          "description": "The URL to the Snarf XML file listing available assignments."
        },
        "itsc2214.signonURL": {
          "type": "string",
          "default": "https://web-cat.cs.vt.edu/Web-CAT/WebObjects/Web-CAT.woa",
          "description": "The URL for signing into Web-CAT."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "itsc2214Explorer",
          "title": "ITSC2214",
          "icon": "src/icon.png"
        }
      ]
    },
    "views": {
      "itsc2214Explorer": [
        {
          "id": "itsc2214ExplorerView",
          "name": "Assignments",
          "when": "true"
        }
      ]
    },
    "menus": {
      "extension/context": [
        {
          "command": "itsc2214.openView",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "itsc2214.refreshAssignments",
          "when": "view == itsc2214ExplorerView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "itsc2214.downloadAssignment",
          "when": "view == itsc2214ExplorerView",
          "group": "navigation@1"
        },
        {
          "command": "itsc2214.uploadProject",
          "when": "view == itsc2214ExplorerView",
          "group": "navigation@2"
        },
        {
          "command": "itsc2214.reinstallJars",
          "when": "view == itsc2214ExplorerView",
          "group": "navigation@3"
        }
      ],
      "explorer/context": [
        {
          "command": "itsc2214.reinstallJars",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.100.0",
    "@types/node": "^20.12.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "xml2js": "^0.6.2",
    "node-fetch": "^2.6.1"
  },
  "optionalDependencies": {
    "archiver": "^5.3.1"
  }
}
